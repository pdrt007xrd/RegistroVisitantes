@{
    ViewData["Title"] = "üìã Registro Visitantes";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>üìã Registro Visitantes</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #0d6efd;
        }
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark">
        <div class="container">
            <span class="navbar-brand mb-0 h1 mx-auto">üìã Registro de Visitas</span>
        </div>
    </nav>

    <div class="container my-5">
        <!-- Alerta de √©xito -->
        <div id="alertaExito" class="alert alert-success alert-dismissible fade" role="alert" style="display: none;">
            ‚úì ¬°Contacto guardado con √©xito!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>

        <!-- Formulario de agregar contacto -->
        <div class="row mb-4">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Agregar Contacto</h5>
                    </div>
                    <div class="card-body">
                        <div id="alertaError" class="alert alert-danger alert-dismissible fade" role="alert" style="display: none;">
                            <strong>Error de validaci√≥n:</strong>
                            <ul id="listaErrores" class="mb-0 mt-2"></ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <form id="formContacto" novalidate>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Nombre <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="nombre" placeholder="Nombre completo" minlength="3" maxlength="100" required>
                                    <small class="form-text text-muted">Entre 3 y 100 caracteres</small>
                                    <div class="invalid-feedback d-block" id="errorNombre"></div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">C√©dula <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="cedula" placeholder="001-0029703-5" maxlength="13" required>
                                    <small class="form-text text-muted">Formato: XXX-XXXXXXX-X</small>
                                    <div class="invalid-feedback d-block" id="errorCedula"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Empresa Proveniente <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="empresaProveniente" placeholder="Empresa" minlength="3" maxlength="100" required>
                                    <small class="form-text text-muted">Entre 3 y 100 caracteres</small>
                                    <div class="invalid-feedback d-block" id="errorEmpresa"></div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">D√≥nde Visita <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="dondeVisita" placeholder="Departamento/√Årea" minlength="3" maxlength="100" required>
                                    <small class="form-text text-muted">Entre 3 y 100 caracteres</small>
                                    <div class="invalid-feedback d-block" id="errorDonde"></div>
                                </div>
                            </div>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="reset" class="btn btn-secondary">Limpiar Campos</button>
                                <button type="submit" class="btn btn-success">Guardar Contacto</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- B√∫squeda y filtros -->
        <div class="row mb-4">
            <div class="col-lg-8 mx-auto">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="buscar" placeholder="Buscar por nombre o empresa..." aria-label="Buscar">
                    <button class="btn btn-danger" type="button" id="btnReporte">üìÑ Generar Reporte PDF</button>
                </div>
                <div class="row g-2">
                    <div class="col-md-6">
                        <label class="form-label">Desde:</label>
                        <input type="date" class="form-control" id="fechaDesde">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Hasta:</label>
                        <input type="date" class="form-control" id="fechaHasta">
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de contactos -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Listado de Contactos</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>C√©dula</th>
                                        <th class="d-none d-md-table-cell">Empresa</th>
                                        <th class="d-none d-lg-table-cell">Lugar Visita</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody id="tablaContactos">
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-3">Cargando...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paginaci√≥n -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <button class="btn btn-outline-primary" id="btnAnterior" disabled>‚Üê Anterior</button>
                    <span class="text-muted">P√°gina <strong id="pagina">1</strong></span>
                    <button class="btn btn-outline-primary" id="btnSiguiente">Siguiente ‚Üí</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para el PDF -->
    <div class="modal fade" id="modalPDF" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">üìã Reporte de Visitas</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <iframe id="framePDF" style="width: 100%; height: 600px; border: none;"></iframe>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        const API_URL = '/api/visitas';
        let paginaActual = 1;
        const modal = new bootstrap.Modal(document.getElementById('modalPDF'));

        // Validar y formatear c√©dula XXX-XXXXXXX-X
        function formatearCedula(cedula) {
            const limpia = cedula.replace(/\D/g, '');
            if (limpia.length !== 11) return null;
            return `${limpia.substring(0, 3)}-${limpia.substring(3, 10)}-${limpia.substring(10)}`;
        }

        // Validar formulario
        function validarFormulario() {
            const errores = [];
            const nombre = document.getElementById('nombre').value.trim();
            const cedula = document.getElementById('cedula').value.trim();
            const empresaProveniente = document.getElementById('empresaProveniente').value.trim();
            const dondeVisita = document.getElementById('dondeVisita').value.trim();

            // Validar nombre
            if (!nombre) {
                errores.push('El nombre es obligatorio');
                document.getElementById('errorNombre').textContent = 'El nombre es obligatorio';
                document.getElementById('nombre').classList.add('is-invalid');
            } else if (nombre.length < 3 || nombre.length > 100) {
                errores.push('El nombre debe tener entre 3 y 100 caracteres');
                document.getElementById('errorNombre').textContent = 'El nombre debe tener entre 3 y 100 caracteres';
                document.getElementById('nombre').classList.add('is-invalid');
            } else {
                document.getElementById('errorNombre').textContent = '';
                document.getElementById('nombre').classList.remove('is-invalid');
            }

            // Validar c√©dula
            if (!cedula) {
                errores.push('La c√©dula es obligatoria');
                document.getElementById('errorCedula').textContent = 'La c√©dula es obligatoria';
                document.getElementById('cedula').classList.add('is-invalid');
            } else if (!formatearCedula(cedula)) {
                errores.push('La c√©dula debe tener 11 d√≠gitos (ej: 001-0029703-5 o 00100297035)');
                document.getElementById('errorCedula').textContent = 'La c√©dula debe tener 11 d√≠gitos';
                document.getElementById('cedula').classList.add('is-invalid');
            } else {
                document.getElementById('errorCedula').textContent = '';
                document.getElementById('cedula').classList.remove('is-invalid');
            }

            // Validar empresa proveniente
            if (!empresaProveniente) {
                errores.push('La empresa proveniente es obligatoria');
                document.getElementById('errorEmpresa').textContent = 'La empresa es obligatoria';
                document.getElementById('empresaProveniente').classList.add('is-invalid');
            } else if (empresaProveniente.length < 3 || empresaProveniente.length > 100) {
                errores.push('La empresa debe tener entre 3 y 100 caracteres');
                document.getElementById('errorEmpresa').textContent = 'Entre 3 y 100 caracteres';
                document.getElementById('empresaProveniente').classList.add('is-invalid');
            } else {
                document.getElementById('errorEmpresa').textContent = '';
                document.getElementById('empresaProveniente').classList.remove('is-invalid');
            }

            // Validar d√≥nde visita
            if (!dondeVisita) {
                errores.push('El lugar de visita es obligatorio');
                document.getElementById('errorDonde').textContent = 'El lugar de visita es obligatorio';
                document.getElementById('dondeVisita').classList.add('is-invalid');
            } else if (dondeVisita.length < 3 || dondeVisita.length > 100) {
                errores.push('El lugar de visita debe tener entre 3 y 100 caracteres');
                document.getElementById('errorDonde').textContent = 'Entre 3 y 100 caracteres';
                document.getElementById('dondeVisita').classList.add('is-invalid');
            } else {
                document.getElementById('errorDonde').textContent = '';
                document.getElementById('dondeVisita').classList.remove('is-invalid');
            }

            return errores;
        }

        // Mostrar errores
        function mostrarErrores(errores) {
            const alertaError = document.getElementById('alertaError');
            const listaErrores = document.getElementById('listaErrores');
            if (errores.length > 0) {
                listaErrores.innerHTML = errores.map(e => `<li>${e}</li>`).join('');
                alertaError.style.display = 'block';
                setTimeout(() => alertaError.style.display = 'none', 5000);
            }
        }

        // Cargar contactos
        async function cargarContactos() {
            const buscar = document.getElementById('buscar').value;
            const fechaDesde = document.getElementById('fechaDesde').value;
            const fechaHasta = document.getElementById('fechaHasta').value;
            
            let url = `${API_URL}?buscar=${buscar}&page=${paginaActual}`;
            if (fechaDesde) url += `&fechaDesde=${fechaDesde}`;
            if (fechaHasta) url += `&fechaHasta=${fechaHasta}`;
            
            try {
                const res = await fetch(url);
                const data = await res.json();
                
                const tbody = document.getElementById('tablaContactos');
                if (data.data && data.data.length > 0) {
                    tbody.innerHTML = data.data.map(c => `
                        <tr>
                            <td>${c.nombre}</td>
                            <td>${c.cedula}</td>
                            <td class="d-none d-md-table-cell">${c.empresaProveniente}</td>
                            <td class="d-none d-lg-table-cell">${c.dondeVisita}</td>
                            <td>${new Date(c.fechaVisita).toLocaleDateString()}</td>
                        </tr>
                    `).join('');
                } else {
                    tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted py-3">No hay contactos registrados</td></tr>';
                }
                
                document.getElementById('pagina').textContent = paginaActual;
                document.getElementById('btnAnterior').disabled = paginaActual === 1;
                document.getElementById('btnSiguiente').disabled = paginaActual * 5 >= data.total;
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('tablaContactos').innerHTML = '<tr><td colspan="5" class="text-center text-danger py-3">Error al cargar los datos</td></tr>';
            }
        }

        // Guardar contacto
        document.getElementById('formContacto').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Validar formulario
            const errores = validarFormulario();
            if (errores.length > 0) {
                mostrarErrores(errores);
                return;
            }
            
            const cedula = document.getElementById('cedula').value;
            const cedulaFormateada = formatearCedula(cedula);
            
            const contacto = {
                nombre: document.getElementById('nombre').value.trim(),
                cedula: cedulaFormateada,
                empresaProveniente: document.getElementById('empresaProveniente').value.trim(),
                dondeVisita: document.getElementById('dondeVisita').value.trim()
            };
            
            try {
                const res = await fetch(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(contacto)
                });

                if (!res.ok) {
                    const error = await res.json();
                    const mensajes = error.errors ? Object.entries(error.errors).flatMap(([key, msgs]) => Array.isArray(msgs) ? msgs : [msgs]) : ['Error al guardar el contacto'];
                    mostrarErrores(mensajes);
                    return;
                }
                
                const alerta = document.getElementById('alertaExito');
                alerta.style.display = 'block';
                setTimeout(() => alerta.style.display = 'none', 3000);
                
                document.getElementById('formContacto').reset();
                // Limpiar clases de validaci√≥n
                document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
                document.querySelectorAll('.invalid-feedback').forEach(el => el.textContent = '');
                paginaActual = 1;
                cargarContactos();
            } catch (error) {
                console.error('Error:', error);
                mostrarErrores(['Error al guardar el contacto']);
            }
        });

        // Validaci√≥n en tiempo real
        document.getElementById('nombre').addEventListener('input', () => {
            const valor = document.getElementById('nombre').value.trim();
            if (valor.length < 3 || valor.length > 100) {
                document.getElementById('errorNombre').textContent = 'Entre 3 y 100 caracteres';
                document.getElementById('nombre').classList.add('is-invalid');
            } else {
                document.getElementById('errorNombre').textContent = '';
                document.getElementById('nombre').classList.remove('is-invalid');
            }
        });

        document.getElementById('cedula').addEventListener('input', (e) => {
            const valor = e.target.value;
            const limpia = valor.replace(/\D/g, '');
            if (limpia.length > 11) {
                e.target.value = limpia.substring(0, 11);
                return;
            }
            if (limpia.length === 11) {
                const formateada = `${limpia.substring(0, 3)}-${limpia.substring(3, 10)}-${limpia.substring(10)}`;
                if (valor.replace(/\D/g, '') === limpia) {
                    e.target.value = formateada;
                }
            }
        });

        document.getElementById('empresaProveniente').addEventListener('input', () => {
            const valor = document.getElementById('empresaProveniente').value.trim();
            if (!valor) {
                document.getElementById('errorEmpresa').textContent = 'La empresa es obligatoria';
                document.getElementById('empresaProveniente').classList.add('is-invalid');
            } else if (valor.length < 3 || valor.length > 100) {
                document.getElementById('errorEmpresa').textContent = 'Entre 3 y 100 caracteres';
                document.getElementById('empresaProveniente').classList.add('is-invalid');
            } else {
                document.getElementById('errorEmpresa').textContent = '';
                document.getElementById('empresaProveniente').classList.remove('is-invalid');
            }
        });

        document.getElementById('dondeVisita').addEventListener('input', () => {
            const valor = document.getElementById('dondeVisita').value.trim();
            if (!valor) {
                document.getElementById('errorDonde').textContent = 'El lugar de visita es obligatorio';
                document.getElementById('dondeVisita').classList.add('is-invalid');
            } else if (valor.length < 3 || valor.length > 100) {
                document.getElementById('errorDonde').textContent = 'Entre 3 y 100 caracteres';
                document.getElementById('dondeVisita').classList.add('is-invalid');
            } else {
                document.getElementById('errorDonde').textContent = '';
                document.getElementById('dondeVisita').classList.remove('is-invalid');
            }
        });

        // Paginaci√≥n
        document.getElementById('btnAnterior').addEventListener('click', () => {
            if (paginaActual > 1) {
                paginaActual--;
                cargarContactos();
            }
        });

        document.getElementById('btnSiguiente').addEventListener('click', () => {
            paginaActual++;
            cargarContactos();
        });

        // B√∫squeda y filtros
        document.getElementById('buscar').addEventListener('input', () => {
            paginaActual = 1;
            cargarContactos();
        });

        document.getElementById('fechaDesde').addEventListener('change', () => cargarContactos());
        document.getElementById('fechaHasta').addEventListener('change', () => cargarContactos());

        // Reporte PDF
        document.getElementById('btnReporte').addEventListener('click', () => {
            const buscar = document.getElementById('buscar').value;
            const fechaDesde = document.getElementById('fechaDesde').value;
            const fechaHasta = document.getElementById('fechaHasta').value;
            
            let url = `${API_URL}/reporte?buscar=${buscar}`;
            if (fechaDesde) url += `&fechaDesde=${fechaDesde}`;
            if (fechaHasta) url += `&fechaHasta=${fechaHasta}`;
            
            document.getElementById('framePDF').src = url;
            modal.show();
        });

        // Cargar contactos al inicial
        cargarContactos();
    </script>
</body>
</html>
